.wrapper {
	position: relative;
	z-index: 90;
	margin-top: 60rpx;
}

.left-top-sign {
	position: relative;
	left: 46rpx;
	font-size: 120rpx;
	color: #f8f8f8;
}

.welcome {
	position: relative;
	left: 120rpx;
	top: -90rpx;
	font-size: 46rpx;
	color: #555;
}

.input-content {
	padding: 0 50rpx;
}

.input-item {
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: center;
	padding: 5rpx 30rpx 10rpx 30rpx;
	background: #f8f6fc;
	height: 170rpx;
	border-radius: 4px;
	margin-bottom: 50rpx;
}

.input-item .tit {
	height: 60rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	color: #606266;
}

.input-item textarea {
	height: 100%;
	font-size: 30rpx;
	color: #333333;
	width: 100%;
}

.confirm-btn {
	width: 630rpx !important;
	height: 76rpx;
	line-height: 76rpx;
	border-radius: 50rpx;
	margin-top: 80rpx;
	background: #f33333;
	color: #fff;
	font-size: 32rpx;
	padding: 0;
}