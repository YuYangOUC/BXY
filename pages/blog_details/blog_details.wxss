@import "../../utils/wxParse/wxParse.wxss";

.title {
	background: #2B6695;
	border-radius: 6px 6px 6px 6px;
	box-shadow: 0 0 0 1px #5F5A4B, 1px 1px 6px 1px rgba(10, 10, 0, 0.5);
	color: #FFFFFF;
	font-family: "微软雅黑", "宋体", "黑体", Arial;
	font-size: 17px;
	font-weight: bold;
	line-height: 25px;
	margin: 10px 6px !important;
	padding: 8px 5px 5px 5px;
	text-shadow: 3px 3px 4px #222222;
}

.commentsContainer {
	padding: 0 18rpx;
	border-bottom: 1rpx solid #f5f5f5;
	background: #f5f5f5;
}

.commentsContainer .head {
	display: flex;
	align-items: center;
	margin: 15rpx 0 10rpx 0;
	height: 50rpx;
}

.commentsContainer .head image {
	height: 35rpx;
	width: 35rpx;
	margin: 0 15rpx 0 5rpx;
}

.commentsContainer .head text {
	font-size: 31rpx;
	color: #555555;
}

.commentsContainer .noComment {
	line-height: 60rpx;
	margin-bottom: 20rpx;
	border-radius: 24rpx;
	font-size: 29rpx;
	text-align: center;
	background-color: #ffffff;
	color: #777777;
}

.commentItem {
	margin-bottom: 20rpx;
	background: #fff;
	padding: 20rpx;
	border-radius: 24rpx;
}

.commentItem .header {
	display: flex;
	align-items: center;
	margin-bottom: 15rpx;
}

.commentItem .header .avatar {
	width: 40rpx;
	height: 40rpx;
	border: #bbbbbb solid 1rpx;
	border-radius: 50%;
	margin: 0 25rpx 0 0;
}

.commentItem .header .username {
	font-size: 27rpx;
	color: #222222;
}

.commentItem .header .date {
	margin-left: auto;
	font-size: 26rpx;
	color: #999999;
}

.commentItem .content {
	font-size: 29rpx;
	color: #444444;
}