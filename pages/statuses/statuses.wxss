scroll-view {
	height: calc(100vh);
}

/* 热门新闻 */
.newsContainer {
	padding: 15rpx 20rpx;
	background: #f5f5f5;
}

.newsContainer .header {
	display: flex;
	align-items: center;
	margin-bottom: 10rpx;
}

.newsContainer .header image {
	height: 42rpx;
	width: 42rpx;
	margin: 0 10rpx;
}

.newsContainer .header .title {
	font-size: 33rpx;
	font-weight: bold;
	line-height: 60rpx;
	margin-left: 8rpx;
}

.newsContainer .header .more {
	border: 1rpx solid #666666;
	color: #666666;
	margin-left: auto;
	padding: 5rpx 20rpx;
	font-size: 26rpx;
	border-radius: 30rpx;
}

.newsSwiper {
	height: 240rpx;
}

.swiperItem {
	width: 92%;
	background-color: #ffffff;
	padding: 10rpx 5rpx 15rpx 25rpx;
	border-radius: 20rpx;
	box-shadow: inset 10rpx 0 15rpx -10rpx #222222;
}

.swiperItem .title {
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 10rpx;

	/* 单行文本溢出隐藏 省略号代替 */
	display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.swiperItem .content image {
	float: right;
	margin: 10rpx;
	height: 130rpx;
	width: 130rpx;
	border-radius: 15%;
	margin-left: 15rpx;
}

.swiperItem .content text {
	font-size: 28rpx;
	color: #555555;

	/* 多行文本溢出隐藏 省略号代替*/
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 4;
}

/* 闪存 */
.statusesContainer {
	border-bottom: 1rpx solid #f5f5f5;
	background: #f5f5f5;
}

.statusItem {
	margin-bottom: 20rpx;
	background: #fff;
	padding: 20rpx;
	border-radius: 26rpx;
}

.statusItem .header {
	display: flex;
	align-items: center;
	margin-bottom: 15rpx;
}

.statusItem .header .avatar {
	width: 70rpx;
	height: 70rpx;
	border: #bbbbbb solid 1rpx;
	border-radius: 25%;
	margin: 0 25rpx 0 0;
}

.statusItem .header .username {
	font-size: 29rpx;
	color: #222222;
}

.statusItem .header .date {
	font-size: 26rpx;
	color: #999999;
}

.commentCount {
	display: flex;
	align-items: center;
	margin-left: auto;
}

.commentCount image {
	height: 25rpx;
	width: 25rpx;
	margin-right: 15rpx;
}

.commentCount text {
	font-size: 26rpx;
	color: #777777;
	margin-right: 5rpx;
}

.statusItem .content {
	font-size: 30rpx;
	/* 多行文本溢出隐藏 省略号代替*/
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 4;
}

movable-area {
	pointer-events: none;
	position: fixed;
	bottom: 100rpx;
	right: 100rpx;
	height: 90rpx;
	width: 90rpx;
}

movable-view {
	pointer-events: auto;
	height: 90rpx;
	width: 90rpx;
}

movable-view image {
	width: 100%;
	height: 100%;
}

textarea {
	height: 120rpx;
	width: 560rpx;
}

/* 下滑触底加载更多 */
.noMore {
	line-height: 60rpx;
	margin: 0 16rpx 20rpx 16rpx;
	border-radius: 24rpx;
	font-size: 29rpx;
	text-align: center;
	background-color: #ffffff;
	color: #666666;
}

.weui-loadmore {
	margin: 0.7em auto;
	font-size: 14px;
	color: #666666;
	text-align: center;
}

.weui-loading {
	margin: 0 8px;
	width: 20px;
	height: 20px;
	display: inline-block;
	vertical-align: middle;
	-webkit-animation: weuiLoading 1s steps(12, end) infinite;
	animation: weuiLoading 1s steps(12, end) infinite;
	background: transparent url(data:image/svg+xml;base64,) no-repeat;
	background-size: 100%;
}

.weui-loadmore__tips {
	display: inline-block;
	vertical-align: middle;
}