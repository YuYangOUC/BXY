.swiper-tab {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	display: flex;
	background: #f5f5f5;
}

.tab-item {
	flex: 1;
	font-size: 32rpx;
	color: #777777;
}

.on {
	color: #f33333;
	border-bottom: 4rpx solid #f33333;
}

.swiper {
	height: calc(100vh - 80rpx);
}

.swiper scroll-view {
	height: 100%;
}

.swiper scroll-view {
	background-color: #f5f5f5;
}

.pageContainer {
	border-top: 2rpx solid #f5f5f5;
	border-bottom: 1rpx solid #f5f5f5;
	background: #f5f5f5;
}

.pageItem {
	margin: 1rpx 16rpx 20rpx 16rpx;
	padding: 20rpx;
	border-radius: 20rpx;
	background: #fff;
	box-shadow: 0 10rpx 15rpx -10rpx #222222;
}

.pageItem-hover {
	background: #fcfcfc;
}

.pageItem .title {
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 15rpx;

	/* 单行文本溢出隐藏 省略号代替 */
	display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

.pageItem .content {
	margin-bottom: 15rpx;
}

.pageItem .content image {
	float: right;
	margin: 10rpx;
	height: 130rpx;
	width: 130rpx;
	border-radius: 15%;
	margin-left: 15rpx;
}

.pageItem .content text {
	font-size: 28rpx;

	/* 多行文本溢出隐藏 省略号代替*/
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 4;
}

.pageItem .bottom {
	display: flex;
	align-items: center;
}

.pageItem .bottom .count {
	display: flex;
	align-items: center;
}

.pageItem .bottom .count view {
	display: flex;
	align-items: center;
	margin-right: 35rpx;
}

.pageItem .bottom .count image {
	height: 26rpx;
	width: 26rpx;
	margin-right: 10rpx;
}

.pageItem .bottom .count text {
	font-size: 26rpx;
	color: #777777;
}

.pageItem .bottom .date {
	font-size: 26rpx;
	color: #999999;
	margin-right: 10rpx;
	margin-left: auto;
}

/* 下滑触底加载更多 */
.noMore {
	line-height: 60rpx;
	margin: 0 16rpx 20rpx 16rpx;
	border-radius: 24rpx;
	font-size: 29rpx;
	text-align: center;
	background-color: #ffffff;
	color: #666666;
}

.weui-loadmore {
	margin: 0.7em auto;
	font-size: 14px;
	color: #666666;
	text-align: center;
}

.weui-loading {
	margin: 0 8px;
	width: 20px;
	height: 20px;
	display: inline-block;
	vertical-align: middle;
	-webkit-animation: weuiLoading 1s steps(12, end) infinite;
	animation: weuiLoading 1s steps(12, end) infinite;
	background: transparent url(data:image/svg+xml;base64,) no-repeat;
	background-size: 100%;
}

.weui-loadmore__tips {
	display: inline-block;
	vertical-align: middle;
}